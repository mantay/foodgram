<% provide(:title, "Редактировать профиль") %>
<%= render('layouts/aside_menu') %>
<div class="col-md-6">
  <h3>Редактирование профиля</h3>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form-horizontal margin-top-fix" }) do |f| %>
    <%= render('shared/error_messages') %>
    
    <fieldset>

      <div class="form-group">
        <%= f.label 'Ваше имя', class: "col-md-3 control-label" %>
        <div class="col-md-9">
          <%= f.text_field :username, autofocus: true, class: "form-control" %>
        </div>
      </div>

    <div class="form-group">
      <%= f.label :email, class: "col-md-3 control-label" %>
      <div class="col-md-9">
        <%= f.email_field :email, class: "form-control" %>
      </div>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="form-group">
      <%= f.label "Пароль", class: "col-md-3 control-label" %> 
      <div class="col-md-9">
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
        <i class="center center-block">(оставьте поле пустым, если не хотите изменять пароль)</i>
      </div>
    </div>

    <div class="form-group">
      <%= f.label "Подтвердите пароль", class: "col-md-3 control-label" %>
      <div class="col-md-9">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label "Текущий пароль", class: "col-md-3 control-label" %>
      <div class="col-md-9">
        <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
        <i class="center center-block">(введите ваш текущий пароль, для сохранения изменений)</i>
      </div>
    </div>

    <%= f.submit "Обновить профиль", class: "btn btn-success pull-right" %>
  <% end %>
  </fieldset>

  <%= link_to "Удалить профиль", "#my-modal", "data-toggle" => "modal", class: "pull-right text-danger" %>
  <div class="modal " id="my-modal">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button aria-hidden="true" class="close" data-dismiss="modal" type="button">×</button>
          <h3 id="myModalLabel">Мы вам так надоели?</h3>
        </div>
        <div class="modal-body">
          Вы дейстивельно хотите удалить свой аккаунт?
        </div>
        <div class="modal-footer">
           <%= button_to "Удалить мой профиль", registration_path(resource_name), method: :delete, class: "btn btn-danger btn-delete-float" %>
          <button aria-hidden="true" class="btn" data-dismiss="modal">Закрыть</button>
        </div>
      </div>
    </div>
  </div>
</div>
