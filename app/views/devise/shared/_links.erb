<div class="btn-group">
  <a href="#" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
    Войти с помощью
    <span class="caret"></span>
  </a>
  <ul class="dropdown-menu log-in-with">
    <%- if devise_mapping.omniauthable? %>
      <%- resource_class.omniauth_providers.each do |provider| %>
      <li>
        <%= link_to "#{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider) %><br />
      </li>
    <% end -%>
  <% end -%>
</div>

<%- if controller_name != 'sessions' %>
  <p>
    <%= link_to "Войти", new_session_path(resource_name) %><br />
  </p>
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <p>
    <%= link_to "Регистрация", new_registration_path(resource_name) %><br />
  </p>
<% end -%>
  
   


